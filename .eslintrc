{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "plugin:@next/next/recommended",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-return-assign": [2, "except-parens"],
    "jsx-a11y/label-has-associated-control": ["error", { "assert": "htmlFor" } ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
